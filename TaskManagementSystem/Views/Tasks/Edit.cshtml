@model TaskManagementSystem.Models.TaskItemViewModel

@{
    ViewData["Title"] = "Edit Task";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="text-white mb-4">Edit Task</h1>
            
            <div class="card bg-dark text-white border-secondary">
                <div class="card-header border-secondary">
                    <h4 class="mb-0">Task Details</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="UserId" />
                        
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control bg-dark text-white border-secondary" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control bg-dark text-white border-secondary" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="DueDate" class="form-label"></label>
                            <input asp-for="DueDate" class="form-control bg-dark text-white border-secondary" type="date" />
                            <span asp-validation-for="DueDate" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select bg-dark text-white border-secondary" asp-items="Html.GetEnumSelectList<TaskManagementSystem.Models.TaskStatus>()"></select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Priority" class="form-label"></label>
                            <select asp-for="Priority" class="form-select bg-dark text-white border-secondary" asp-items="Html.GetEnumSelectList<TaskManagementSystem.Models.TaskPriority>()"></select>
                            <span asp-validation-for="Priority" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-light">Back to List</a>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 