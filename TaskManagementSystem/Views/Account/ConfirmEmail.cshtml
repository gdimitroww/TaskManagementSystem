@{
    ViewData["Title"] = "Email Confirmed";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="login-card card shadow-lg border-0 mb-5">
                <div class="card-header bg-success text-white text-center py-3">
                    <h3 class="mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body p-4 text-center">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill display-1 text-success"></i>
                    </div>
                    <h4 class="mb-3">Your email has been confirmed</h4>
                    <p class="mb-4">
                        Thank you for confirming your email. Your account is now fully activated.
                    </p>
                    <div class="alert alert-info mb-4">
                        <h5 class="mb-2"><i class="bi bi-info-circle me-2"></i>What's Next?</h5>
                        <p class="mb-0">You can now log in to your account and start using all the features of Task Management System.</p>
                    </div>
                    <div class="d-grid gap-2">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Go to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 