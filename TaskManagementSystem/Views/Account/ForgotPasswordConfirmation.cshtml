@{
    ViewData["Title"] = "Password Reset Email Sent";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="login-card card shadow-lg border-0 mb-5">
                <div class="card-header bg-success text-white text-center py-3">
                    <h3 class="mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body p-4 text-center">
                    <div class="mb-4">
                        <i class="bi bi-envelope-check display-1 text-success"></i>
                    </div>
                    <h4 class="mb-3">Email Sent Successfully</h4>
                    <p class="mb-4">
                        We've sent password reset instructions to your email address.
                    </p>
                    <div class="alert alert-info mb-4">
                        <h5 class="mb-2"><i class="bi bi-info-circle me-2"></i>Important Information</h5>
                        <ul class="text-start mb-0">
                            <li>Please check your inbox and spam/junk folders.</li>
                            <li>The password reset link will expire in 24 hours.</li>
                            <li>If you don't receive the email within a few minutes, you can try requesting a new one.</li>
                        </ul>
                    </div>
                    <div class="d-grid gap-2">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary">
                            <i class="bi bi-arrow-left me-2"></i>Return to Login
                        </a>
                        <a asp-controller="Account" asp-action="ForgotPassword" class="btn btn-outline-secondary">
                            <i class="bi bi-envelope me-2"></i>Resend Reset Email
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 